@model CarouselItem
@{ 
    if(ViewBag.Action != null)
    {


        <form asp-action="@ViewBag.Action" method="post">
            @{
                if (ViewBag.Action == nameof(CarouselController.Edit))
                {
                    <input asp-for="ID" type="hidden">
                }
            }
            <div class="form-group">
                <label asp-for="ImageSrc">Image Source</label>
                <input asp-for="ImageSrc" type="text" class="form-control" placeholder="Enter Image Source">
            </div>
            <div class="form-group">
                <label asp-for="ImageAlt">Image Alt</label>
                <input asp-for="ImageAlt" type="text" class="form-control" placeholder="Enter Image Alt">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    }
}

